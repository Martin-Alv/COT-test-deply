  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT 
SET @Already_Exists = 0 
SELECT 
   TOP 1 @Already_Exists  = 1 
FROM 
   APP.Turno_Laboral
WHERE 
   dbo.fn_Sustituir_Caracteres_Especiales(Lower(Turno_Laboral))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Turno_Laboral)) 
IF @Already_Exists = 1 
BEGIN 
   SET @BusinessRules_PreventDefault = 1 
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](204,1,54,@Turno_Laboral) 
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](204,1,54,@Turno_Laboral) 
   RETURN 
END
]]></rule>
    <rule id="r101" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT 
SET @Already_Exists = 0 
SELECT 
   TOP 1 @Already_Exists  = 1 
FROM 
   APP.Turno_Laboral
WHERE 
dbo.fn_Sustituir_Caracteres_Especiales(Lower(Turno_Laboral))= dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Turno_Laboral)) 
AND Turno_Laboral_Id <> @Turno_Laboral_Id  
IF @Already_Exists = 1 
BEGIN 
   SET @BusinessRules_PreventDefault = 1 
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](205,1,54,@Turno_Laboral) 
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](205,1,54,@Turno_Laboral) 
   RETURN 
END
]]></rule>
