    <rule id="r104" commandName="Insert|Update" type="Sql" phase="Before" name="Validar_Formato_Hora"><![CDATA[DECLARE @Hora VARCHAR(8);

---Turno_Hora_Inicio
SET @Hora = LEFT(@Turno_Hora_Inicio, 2);
SET @Hora = @Hora + ':00:00'
SET @Turno_Hora_Inicio = @Hora

--Turno_Hora_Fin
