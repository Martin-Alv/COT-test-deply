  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Celda"."Celda_Id" "Celda_Id"
	,"Celda"."Celda_Descripcion" "Celda_Descripcion"
	,"Celda"."Activo" "Activo"
	,"Celda"."Fecha_Creacion" "Fecha_Creacion"
	,"Celda"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Celda"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
from "APP"."Celda" "Celda"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Celda"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Celda"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Celda"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
]]></text>
    </command>
    <command id="Celda_IdIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="Celda_Id" />
      </output>
    </command>
  </commands>
