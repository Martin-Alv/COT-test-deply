  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT 
SET @Already_Exists = 0 
SELECT 
   TOP 1 @Already_Exists  = 1 
FROM 
   APP.Celda
WHERE 
dbo.fn_Sustituir_Caracteres_Especiales(Lower(Celda_Descripcion))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Celda_Descripcion)) 
IF @Already_Exists = 1 
BEGIN 
   SET @BusinessRules_PreventDefault = 1 
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](206,1,55,@Celda_Descripcion) 
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](206,1,55,@Celda_Descripcion) 
   RETURN 
END
]]></rule>
    <rule id="r101" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT 
SET @Already_Exists = 0 
SELECT 
   TOP 1 @Already_Exists  = 1 
FROM 
   APP.Celda
WHERE 
dbo.fn_Sustituir_Caracteres_Especiales(Lower(Celda_Descripcion))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Celda_Descripcion)) 
AND Celda_Id <> @Celda_Id  
IF @Already_Exists = 1 
BEGIN 
   SET @BusinessRules_PreventDefault = 1 
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](207,1,55,@Celda_Descripcion) 
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](207,1,55,@Celda_Descripcion) 
   RETURN 
END
]]></rule>
