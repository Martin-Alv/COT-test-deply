  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Producto_Material
WHERE
	Producto_Id = @Producto_Id
AND Material_Id = @Material_Id

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](48,1,0,'')
   SET @Result_ShowAlert = @Result_ShowViewMessage
   RETURN
END ]]></rule>
    <rule id="r101" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Producto_Material
WHERE
	Producto_Id = @Producto_Id
AND Material_Id = @Material_Id
AND Producto_Material_Id <> @Producto_Material_Id

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](48,1,0,'')
   SET @Result_ShowAlert = @Result_ShowViewMessage
   RETURN
END ]]></rule>
