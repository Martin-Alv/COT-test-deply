    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Producto_Material"."Producto_Material_Id" "Producto_Material_Id"
	,"Producto_Material"."Producto_Id" "Producto_Id"
	,"Producto_"."Producto_Clave" "Producto_Clave"
	,"Producto_Material"."Material_Id" "Material_Id"
	,"Material_"."Material" "Material"
	,"Producto_Material"."Unidad_Material_Id" "Unidad_Material_Id"
	,"Unidad_Material_"."Unidad_Material" "Unidad_Material"
	,"Producto_Material"."Cantidad" "Cantidad"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Producto_Material"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Producto_Material"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Producto_Material"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
from "APP"."Producto_Material" "Producto_Material"
	left join "APP"."Producto" "Producto_" on "Producto_Material"."Producto_Id" = "Producto_"."Producto_Id"
	left join "APP"."Material" "Material_" on "Producto_Material"."Material_Id" = "Material_"."Material_Id"
	left join "APP"."Unidad_Material" "Unidad_Material_" on "Producto_Material"."Unidad_Material_Id" = "Unidad_Material_"."Unidad_Material_Id"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Producto_Material"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Producto_Material"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Producto_Material"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
]]></text>
    </command>
