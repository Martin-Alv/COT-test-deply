  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Clasificacion"."Clasificacion_Id" "Clasificacion_Id"
	,"Clasificacion"."Clasificacion" "Clasificacion"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Clasificacion"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Clasificacion"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Clasificacion"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Registrado_Desde"."Registrado_Desde" "Registrado_Desde"
	,"Clasificacion"."Registrado_Desde_Id" "Registrado_Desde_Id"
from "APP"."Clasificacion" "Clasificacion"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Clasificacion"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Clasificacion"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Clasificacion"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
	left join "APP"."Registrado_Desde" "Registrado_Desde" on "Clasificacion"."Registrado_Desde_Id" = "Registrado_Desde"."Registrado_Desde_Id"
]]></text>
    </command>
