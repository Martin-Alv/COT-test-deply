  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Area_Entrega
WHERE
   dbo.fn_Sustituir_Caracteres_Especiales(Lower(Area_Entrega))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Area_Entrega))

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](18,1,1,@Area_Entrega)
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](18,1,1,@Area_Entrega)
   RETURN
END 
]]></rule>
    <rule id="r103" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

