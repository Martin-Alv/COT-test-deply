    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Almacen"."Almacen_Id" "Almacen_Id"
	,"Almacen"."Numero_Almacen" "Numero_Almacen"
	,"Almacen"."Descripcion_Almacen" "Descripcion_Almacen"
	,"Almacen"."Es_Default" "Es_Default"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Almacen"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Almacen"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Almacen"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
from "APP"."Almacen" "Almacen"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Almacen"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_Aplicacion_V" "Creado_Por" on "Almacen"."Creado_Por_Id" = "Creado_Por"."Usuario_Id"
	left join "dbo"."Usuario_Aplicacion_V" "Actualizado_Por" on "Almacen"."Actualizado_Por_Id" = "Actualizado_Por"."UserId"
]]></text>
    </command>
