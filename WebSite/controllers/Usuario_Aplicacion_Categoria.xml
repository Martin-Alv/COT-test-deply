      <text><![CDATA[
select
	"Usuario_Aplicacion_Categoria"."Usuario_Aplicacion_Categoria_Id" "Usuario_Aplicacion_Categoria_Id"
	,"Usuario_Aplicacion_Categoria"."Usuario_Aplicacion_Id" "Usuario_Aplicacion_Id"
	,"Usuario_Aplicacion"."Nombre_Completo" "Nombre_Completo"
	,"Usuario_Aplicacion_Categoria"."Categoria_Id" "Categoria_Id"
	,"Categoria_"."Categoria_Clave" "Categoria_Clave"
	,"Usuario_Aplicacion_Categoria"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Usuario_Aplicacion_Categoria"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Usuario_Aplicacion_Categoria"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Usuario_Aplicacion_Categoria"."Familia_Id" "Familia_Id"
	,"Familia"."Familia_Clave" "Familia_Clave"
from "APP"."Usuario_Aplicacion_Categoria" "Usuario_Aplicacion_Categoria"
	left join "APP"."Categoria" "Categoria_" on "Usuario_Aplicacion_Categoria"."Categoria_Id" = "Categoria_"."Categoria_Id"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Usuario_Aplicacion_Categoria"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Usuario_Aplicacion_Categoria"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Usuario_Aplicacion_Categoria"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
	left join "APP"."Familia" "Familia" on "Usuario_Aplicacion_Categoria"."Familia_Id" = "Familia"."Familia_Id"
	left join "APP"."Usuario_Aplicacion" "Usuario_Aplicacion" on "Usuario_Aplicacion_Categoria"."Usuario_Aplicacion_Id" = "Usuario_Aplicacion"."Usuario_Aplicacion_Id"
]]></text>
    </command>
