  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
  [APP].[Usuario_Aplicacion_Categoria]
WHERE
  Usuario_Aplicacion_Id = @Usuario_Aplicacion_Id
AND Categoria_Id = @Categoria_Id

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](44,1,14,@Nombre_Completo + ' vs. ' + @Categoria_Clave)
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](44,1,14,@Nombre_Completo + ' vs. ' + @Categoria_Clave)
   RETURN
END 
]]></rule>
