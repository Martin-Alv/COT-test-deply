SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Motivo_Solicitud
WHERE
	dbo.fn_Sustituir_Caracteres_Especiales(Lower(Motivo_Solicitud))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Motivo_Solicitud))

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](191,1,49,@Motivo_Solicitud)
   SET @Result_ShowAlert = @Result_ShowViewMessage
   RETURN
END 
]]></rule>
