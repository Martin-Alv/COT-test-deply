  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Familia"."Familia_Id" "Familia_Id"
	,"Familia"."Familia_Descripcion" "Familia_Descripcion"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Familia"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Familia"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Familia"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Familia"."Familia_Clave" "Familia_Clave"
from "APP"."Familia" "Familia"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Familia"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Familia"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Familia"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
]]></text>
    </command>
    <command id="Familia_IdIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="Familia_Id" />
      </output>
    </command>
  </commands>
