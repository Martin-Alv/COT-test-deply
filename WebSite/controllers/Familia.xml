   ,Fecha_Ultima_Actualizacion = dbo.fn_Convertir_UTC_A_Fecha_Hora_Local(GETDATE(),NULL)
WHERE
   Familia_Id = @Familia_Id]]></rule>
    <rule id="r103" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Familia
WHERE
   dbo.fn_Sustituir_Caracteres_Especiales(Lower(Familia_Clave))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Familia_Clave))
AND Familia_Id <> @Familia_Id

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](21,1,2,@Familia_Clave)
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](21,1,2,@Familia_Clave)
