  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Familia
WHERE
   dbo.fn_Sustituir_Caracteres_Especiales(Lower(Familia_Clave))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Familia_Clave))

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](20,1,2,@Familia_Clave)
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](20,1,2,@Familia_Clave)
   RETURN
END 
]]></rule>
    <rule id="r102" commandName="Insert" type="Sql" phase="After"><![CDATA[UPDATE 
