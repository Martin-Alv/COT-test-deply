  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Area_Servicio
WHERE
   dbo.fn_Sustituir_Caracteres_Especiales(Lower(Area_Servicio))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Area_Servicio))

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](36,1,10,@Area_Servicio)
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](36,1,10,@Area_Servicio)
   RETURN
END 
]]></rule>
    <rule id="r103" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Area_Servicio
WHERE
   dbo.fn_Sustituir_Caracteres_Especiales(Lower(Area_Servicio))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Area_Servicio))
AND Area_Servicio_Id <> @Area_Servicio_Id

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
