    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Area_Servicio"."Area_Servicio_Id" "Area_Servicio_Id"
	,"Area_Servicio"."Area_Servicio" "Area_Servicio"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Area_Servicio"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Area_Servicio"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Area_Servicio"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
from "APP"."Area_Servicio" "Area_Servicio"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Area_Servicio"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Area_Servicio"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Area_Servicio"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
]]></text>
    </command>
