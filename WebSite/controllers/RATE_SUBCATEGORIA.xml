	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"RATE_SUBCATEGORIA"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"RATE_SUBCATEGORIA"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"RATE_SUBCATEGORIA"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro"."Estatus_Registro" "Estatus_Registro"
	,"RATE_SUBCATEGORIA"."Es_Emergencia" "Es_Emergencia"
	,"RATE_SUBCATEGORIA"."Es_Estandar" "Es_Estandar"
	,"RATE_SUBCATEGORIA"."Es_Cord_Pi" "Es_CordPi"
	,"RATE_SUBCATEGORIA"."Es_Sensor" "Es_Sensor"
	,"RATE_SUBCATEGORIA"."Es_Emergencia_Sensor" "Es_Emergencia_Sensor"
from "APP"."RATE_SUBCATEGORIA" "RATE_SUBCATEGORIA"
	left join "dbo"."Usuario_V" "Creado_Por" on "RATE_SUBCATEGORIA"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "RATE_SUBCATEGORIA"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Estatus_Registro" "Estatus_Registro" on "RATE_SUBCATEGORIA"."Estatus_Registro_Id" = "Estatus_Registro"."Estatus_Registro_Id"
]]></text>
    </command>
