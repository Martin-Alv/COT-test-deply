	,"Semaforo_Rango_Valor"."Rango_Fin" "Rango_Fin"
	,"Semaforo_Rango_Valor"."Valor_Cuantitativo" "Valor_Cuantitativo"
	,"Semaforo_Rango_Valor"."Valor_Cualitativo" "Valor_Cualitativo"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Semaforo_Rango_Valor"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Semaforo_Rango_Valor"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Semaforo_Rango_Valor"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Semaforo_Rango_Valor"."Color_Texto_Id" "Color_Texto_Id"
	,"Color_Texto"."Nombre_Ingles" "Color_Texto"
	,"Semaforo_Rango_Valor"."Color_Fondo_Texto_Id" "Color_Fondo_Texto_Id"
	,"Color_Fondo_Texto"."Nombre_Ingles" "Color_Fondo_Texto"
from "APP"."Semaforo_Rango_Valor" "Semaforo_Rango_Valor"
	left join "APP"."Semaforo" "Semaforo_" on "Semaforo_Rango_Valor"."Semaforo_Id" = "Semaforo_"."Semaforo_Id"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Semaforo_Rango_Valor"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Semaforo_Rango_Valor"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Semaforo_Rango_Valor"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
	left join "APP"."Color" "Color_Texto" on "Semaforo_Rango_Valor"."Color_Texto_Id" = "Color_Texto"."Color_Id"
	left join "APP"."Color" "Color_Fondo_Texto" on "Semaforo_Rango_Valor"."Color_Fondo_Texto_Id" = "Color_Fondo_Texto"."Color_Id"
]]></text>
