  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Semaforo_Rango_Valor
WHERE
	Semaforo_Id = @Semaforo_Id
	AND Rango_Inicio = @Rango_Inicio
	AND Rango_Fin = @Rango_Fin
	AND Valor_Cuantitativo = @Valor_Cuantitativo
	AND Valor_Cualitativo = @Valor_Cualitativo
	
IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](50,1,25,'')
   SET @Result_ShowAlert = @Result_ShowViewMessage
   RETURN
END]]></rule>
