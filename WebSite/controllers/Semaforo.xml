    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Semaforo"."Semaforo_Id" "Semaforo_Id"
	,"Semaforo"."Semaforo" "Semaforo"
	,"Semaforo"."Es_Semaforo_Tiempo_Entrega" "Es_Semaforo_Tiempo_Entrega"
	,"Semaforo"."Es_Semaforo_Mat_Exist_Parcial" "Es_Semaforo_Mat_Exist_Parcial"
	,"Semaforo"."Es_Semaforo_Mat_Inexistente" "Es_Semaforo_Mat_Inexistente"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Semaforo"."Fecha_Creacion" "Fecha_Creacion"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
	,"Semaforo"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Semaforo"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Semaforo"."Estatus_Solicitud_Id" "Estatus_Solicitud_Id"
	,"Estatus_Solicitud"."Estatus_Solicitud" "Estatus_Solicitud"
	,"Semaforo"."Es_Semaforo_Estatus_Solicitud" "Es_Semaforo_Estatus_Solicitud"
from "APP"."Semaforo" "Semaforo"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Semaforo"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Semaforo"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Semaforo"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
	left join "APP"."Estatus_Solicitud" "Estatus_Solicitud" on "Semaforo"."Estatus_Solicitud_Id" = "Estatus_Solicitud"."Estatus_Solicitud_Id"
]]></text>
    </command>
