   ,Fecha_Creacion = dbo.fn_Convertir_UTC_A_Fecha_Hora_Local(GETDATE(),NULL)
   ,Actualizado_Por_Id = @BusinessRules_UserId
   ,Fecha_Ultima_Actualizacion = dbo.fn_Convertir_UTC_A_Fecha_Hora_Local(GETDATE(),NULL)
WHERE
   Semaforo_Id = @Semaforo_Id]]></rule>
    <rule id="r103" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

IF @Es_Semaforo_Estatus_Solicitud = 1
BEGIN
  SELECT
	 TOP 1 @Already_Exists  = 1
  FROM
	 APP.Semaforo
  WHERE
      Estatus_Solicitud_Id = @Estatus_Solicitud_Id
      AND Semaforo_Id <> @Semaforo_Id
	  
  IF @Already_Exists = 1
  BEGIN
	 SET @BusinessRules_PreventDefault = 1
	 SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](130,1,42,@Estatus_Solicitud)
	 SET @Result_ShowAlert =  @Result_ShowViewMessage
	 RETURN
  END 
END

  SELECT
	 TOP 1 @Already_Exists  = 1
  FROM
	 APP.Semaforo
  WHERE
	  dbo.fn_Sustituir_Caracteres_Especiales(Lower(Semaforo))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Semaforo))
      AND Semaforo_Id <> @Semaforo_Id

  IF @Already_Exists = 1
  BEGIN
	 SET @BusinessRules_PreventDefault = 1
	 SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](69,1,24,@Semaforo)
	 SET @Result_ShowAlert =  @Result_ShowViewMessage
	 RETURN
  END 
]]></rule>
