    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Estatus_Usuario
WHERE
	dbo.fn_Sustituir_Caracteres_Especiales(Lower(Estatus_Usuario))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Estatus_Usuario))

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](28,1,6,@Estatus_Usuario)
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](28,1,6,@Estatus_Usuario)
   RETURN
END 
]]></rule>
