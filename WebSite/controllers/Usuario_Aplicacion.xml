	left join "APP"."Genero_Persona" "Genero_Persona" on "Usuario_Aplicacion"."Genero_Persona_Id" = "Genero_Persona"."Genero_Persona_Id"
	left join "APP"."Estatus_Usuario" "Estatus_Usuario" on "Usuario_Aplicacion"."Estatus_Usuario_Id" = "Estatus_Usuario"."Estatus_Usuario_Id"
	left join "dbo"."Usuario_Aplicacion_V" "Usuario_Id" on "Usuario_Aplicacion"."Usuario_Id" = "Usuario_Id"."Usuario_Aplicacion_Id"
	left join "APP"."Area_Servicio" "Area_Servicio" on "Usuario_Aplicacion"."Area_Servicio_Id" = "Area_Servicio"."Area_Servicio_Id"
