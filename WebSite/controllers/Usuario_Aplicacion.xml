from "APP"."Usuario_Aplicacion" "Usuario_Aplicacion"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Usuario_Aplicacion"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
