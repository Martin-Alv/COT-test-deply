  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT

SET @Already_Exists = 0

SELECT
   TOP 1 @Already_Exists  = 1
FROM
   APP.Color
WHERE
	dbo.fn_Sustituir_Caracteres_Especiales(Lower(Nombre_Ingles))=dbo.fn_Sustituir_Caracteres_Especiales(Lower(@Nombre_Ingles))

IF @Already_Exists = 1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](51,1,15,@Nombre_Ingles)
   SET @Result_ShowAlert = @Result_ShowViewMessage
   RETURN
END 
]]></rule>
    <rule id="r102" commandName="Insert" type="Sql" phase="After"><![CDATA[UPDATE 
   APP.Color
SET
