      <text><![CDATA[select
	"Color"."Color_Id" "Color_Id"
	,"Color"."Nombre_Ingles" "Nombre_Ingles"
	,"Color"."Codigo_Hexadecimal" "Codigo_Hexadecimal"
	,"Color"."Codigo_Rgb" "Codigo_Rgb"
	,"Color"."Fecha_Creacion" "Fecha_Creacion"
	,"Color"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Color"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro"
	,"Creado_Por"."Usuario_Sistema" "Creado_Por"
	,"Actualizado_Por"."Usuario_Sistema" "Actualizado_Por"
from "APP"."Color" "Color"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Color"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Creado_Por" on "Color"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Color"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
]]></text>
    </command>
