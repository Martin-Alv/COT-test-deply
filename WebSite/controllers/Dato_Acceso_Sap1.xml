  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT 
SET @Already_Exists = 0 
SELECT 
   TOP 1 @Already_Exists = 1 
FROM 
   [APP].[Dato_Acceso_Sap] 
WHERE 
        [Usuario_Aplicacion_Id] = @Usuario_Aplicacion_Id
	AND [Usuario_Id] = @Usuario_Id

IF @Already_Exists = 1 
BEGIN 
   SET @BusinessRules_PreventDefault = 1 
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](230,1,65,@Nombre_Completo + ' vs. ' + @Usuario_Sistema) 
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](230,1,65,@Nombre_Completo + ' vs. ' + @Usuario_Sistema)
   RETURN 
END ]]></rule>
    <rule id="r101" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Already_Exists BIT 
SET @Already_Exists = 0 
SELECT 
 
   TOP 1 @Already_Exists  = 1 
FROM 
   [APP].[Dato_Acceso_Sap]
WHERE 
     [Usuario_Aplicacion_Id] = @Usuario_Aplicacion_Id
	 AND [Usuario_Id] =  @Usuario_Id
	 AND Dato_Acceso_Sap_Id <> @Dato_Acceso_Sap_Id
	 
IF @Already_Exists = 1 
BEGIN 
   SET @BusinessRules_PreventDefault = 1 
   SET @Result_ShowViewMessage = [dbo].[fn_Obtener_Mensaje_Sistema](231,1,65,@Nombre_Completo + ' vs. ' + @Usuario_Sistema) 
   SET @Result_ShowAlert = [dbo].[fn_Obtener_Mensaje_Sistema](231,1,65,@Nombre_Completo + ' vs. ' + @Usuario_Sistema) 
   RETURN 
END ]]></rule>
    <rule id="r102" commandName="Insert" type="Sql" phase="After"><![CDATA[UPDATE  
   [APP].[Dato_Acceso_Sap] 
