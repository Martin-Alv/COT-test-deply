from "APP"."Dato_Acceso_Sap" "Dato_Acceso_Sap"
	left join "APP"."Usuario_Aplicacion" "Usuario_Aplicacion_" on "Dato_Acceso_Sap"."Usuario_Aplicacion_Id" = "Usuario_Aplicacion_"."Usuario_Aplicacion_Id"
