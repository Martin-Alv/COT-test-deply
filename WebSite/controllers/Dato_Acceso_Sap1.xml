	left join "dbo"."Usuario_V" "Creado_Por" on "Dato_Acceso_Sap"."Creado_Por_Id" = "Creado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Actualizado_Por" on "Dato_Acceso_Sap"."Actualizado_Por_Id" = "Actualizado_Por"."Usuario_Sistema_Id"
	left join "dbo"."Usuario_V" "Usuario_Sistema" on "Dato_Acceso_Sap"."Usuario_Id" = "Usuario_Sistema"."Usuario_Sistema_Id"
]]></text>
