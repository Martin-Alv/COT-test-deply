    <rule id="r104" commandName="New" type="Sql" phase="Execute"><![CDATA[SELECT  TOP 1 
	 @Usuario_Aplicacion_Id = ISNULL(ua.Usuario_Aplicacion_Id,0)
	,@Nombre_Completo = ISNULL(ua.Nombre_Completo,'Sin Nombre Completo')  
	,@Usuario_Id = (ua.Usuario_Id)
	,@Usuario_Sistema =ISNULL(u.Usuario_Sistema,'Sin Usuario Sistema')

FROM 
   [APP].[Usuario_Aplicacion] ua 
INNER JOIN [dbo].[Usuario_V] u ON ua.Usuario_Id = u.Usuario_Sistema_Id

WHERE 
    ua.Estatus_Registro_Id = 1
	AND ua.Usuario_Id = @BusinessRules_UserId;


]]></rule>
